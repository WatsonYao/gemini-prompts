<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1E1E1E">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gemini API Key"
        android:textColorHint="#CCCCCC"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_api_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择模型:"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rg_model_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_gemini_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gemini-2.5-pro"
            android:textColor="@android:color/white"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/rb_gemini_flash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gemini-2.5-flash"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_gemini_flash_lite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gemini-2.5-flash-lite"
            android:textColor="@android:color/white"
            android:padding="8dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_import_json"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导入JSON"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#424242"
            android:textColor="@android:color/white"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btn_save_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:backgroundTint="#2E2E2E"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>